{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,

    "paths": {
      "vscode": [
        "./mocks/vscode.ts"
      ],
      "@/shared/*": [
        "../src/platform/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../src/platform/shared/**/*.ts"
  ]
}