{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RepoSnap",
  "version": "0.1.4",
  "identifier": "com.reposnap.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RepoSnap",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "devtools": true,
        "fullscreen": false,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri:; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:; connect-src 'self' https://reposnap.io; object-src 'none'; frame-src 'none'; child-src 'none'; form-action 'none'; base-uri 'none'; frame-ancestors 'none'; upgrade-insecure-requests;",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["*"],
          "permissions": [
            "store:default",
            "dialog:default",
            "fs:default",
            "updater:default",
            "core:event:default",
            "core:app:allow-version",
            "process:default",
            "opener:allow-open-url",
            "opener:allow-default-urls"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE5QkQxOTRDQ0M1MDg0NkIKUldScmhGRE1UQm05R1U5dCt0NHVKZDN1dWp2eGtpUXZoRG9tSkJMSWVVdG1oVUYxSXdXM05OVEkK",
      "endpoints": ["https://releases.reposnap.io/latest.json"]
    }
  }
}
